<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/tvExportTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export Time Summary"
        android:textSize="20sp"
        android:paddingBottom="16dp" />

    <!-- Summary display area -->
    <TextView
        android:id="@+id/tvExportSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Summary details go here"
        android:padding="16dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white" />

    <!-- Button to select date range -->
    <Button
        android:id="@+id/btnSelectDateRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date Range"
        android:layout_marginTop="16dp" />

    <!-- Button to export the report via email -->
    <Button
        android:id="@+id/btnExportEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export via Email"
        android:layout_marginTop="8dp" />

</LinearLayout>
